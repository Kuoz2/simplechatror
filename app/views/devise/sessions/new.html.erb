<main class="bg-[#181D31] h-screen flex-col justify-center gap-10">
  <section class="flex flex-col items-center gap-1">
    <%= image_tag('chat.png', width:100) %>
    <h1 class="font-bold text-4xl text-white my-4">Ingreso al sistema</h1>
    <p class="text-center font-semibold text-white">Es una aplicacion con RoR</p>
  </section >
<section class=" flex flex-col items-center">
<h2 class="text-white font-bold text-2xl mn-5">Ingreso</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'flex flex-col') do |f| %>
    <div class="flex gap-1 my-2 items-center w-86">
      <%= f.label :email, class:'text-white font-semibold text-sm w-24' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'text-sm font-medium rounded w-full'%>
    </div>

    <div class="flex gap-1 my-2 items-center w-86">
      <%= f.label :password, class:'text-white font-semibold text-sm w-24' %>
      <%= f.password_field :password, autocomplete: "current-password", class:'text-sm font-medium rounded w-full' %>
    </div>

  
    <div class="flex gap-1 my-5 items-center justify-center">
      <%= f.submit "Ingresar", data: {turbo: false} , class: 'bg-green-800 rounded p-3 text-white font-semibold'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </section>
</main>